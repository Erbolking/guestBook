<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Really Simple Guest Book</title>
    <link rel="stylesheet" href="{{ asset('bundles/guestbook/css/foundation.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/guestbook/css/apps.css') }}" />
    <script src="{{ asset('bundles/guestbook/js/vendor/jquery.js') }}"></script>
    <script src="{{ asset('bundles/guestbook/js/vendor/foundation/foundation.min.js') }}"></script>
    <script src="{{ asset('bundles/guestbook/js/apps.js') }}"></script>
</head>
<body>
<nav class="top-bar" data-topbar="">
    <ul class="title-area">
        <li class="name"><h1><a href="#">Guest Book</a></h1></li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
    </ul>
    <section class="top-bar-section">
        <ul class="right">
            <li class="divider"></li>
            <li><a href="#">Home</a></li>
            <li class="divider"></li>
            <li><a href="#">Github</a></li>
        </ul>
    </section>
</nav>
<ul class="breadcrumbs">
    <li><a href="#">Home</a></li>
    <li class="current"><a href="#">Guest Book</a></li>
</ul>
<div class="row">
    <div class="title-area">
        <h2>Guest book</h2>
        <h4 class="subheader">The best guest book all around the world! :)</h4>
        <hr>
    </div>
    <div class="row">
        <div class="large-4 medium-4 small-6 columns">
            <h5>There are 12 entries:</h5>
        </div>
        <div class="large-2 medium-4 small-4 columns">
            <label for="perPage" class="left inline">Per page:</label>
            <select class="large-6 middle-6 small-6" id="perPage">
                <option value="husker">10</option>
                <option value="starbuck">20</option>
                <option value="hotdog">50</option>
                <option value="apollo">100</option>
            </select>
        </div>
    </div>
    <hr>
    <div class="large-10 columns">
        {% for entry in entries %}
            <div class="row entry">
                <div class="author-details columns middle-2 large-2  small-4">
                    <div class="">
                        <img class="th" src="{{ asset('bundles/guestbook/images/guest.png') }}"/>
                        <div class="publicDate">
                            <p>{{ entry.publicDate|date('Y-M-d H:i') }}</p>
                        </div>
                    </div>
                </div>
                <div class="columns middle-10 large-10 small-8">
                    <p><strong>{{ entry.name }}</strong> ({{ entry.email }}) said: {{ entry.message }}</p>
                    <ul class="inline-list">
                        <li><a class="scroll" data-username="{{ entry.name }}" data-id="{{ entry.id }}" href="#post">Reply</a></li>
                    </ul>
                    {% if entry.children|length %}
                        <hr>
                        <h6>{{ entry.children|length }} Messages:</h6>
                        {% for subentry in entry.children %}
                            <div class="row">
                                <div class="large-2 columns small-3"><img class="th" src="{{ asset('bundles/guestbook/images/guest.png') }}"/></div>
                                <div class="large-10 columns"><p><strong>{{ subentry.name }} said:</strong> {{ subentry.message }}</p></div>
                            </div>
                            {% if loop.last == false and loop.index > 0 %}
                                <hr>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <hr/>
        {% endfor %}
        <div class="row">
            <div class="large-centered large-8 columns">
                <ul class="pagination" role="menubar" aria-label="Pagination">
                    <li class="arrow unavailable" aria-disabled="true"><a href="">&laquo; Previous</a></li>
                    <li class="current"><a href="">1</a></li>
                    <li><a href="">2</a></li>
                    <li><a href="">3</a></li>
                    <li><a href="">4</a></li>
                    <li class="unavailable" aria-disabled="true"><a href="">&hellip;</a></li>
                    <li><a href="">12</a></li>
                    <li><a href="">13</a></li>
                    <li><a href="">13</a></li>
                    <li class="arrow"><a href="">Next &raquo;</a></li>
                </ul>
            </div>
        </div>

        <hr/>
        <section id="post" class="post">
            <h5 class="title">Add a feedback</h5>
            <div class="content" data-slug="panel1">
                {{ form_start(form, {'action': path('post_entry')}) }}
                <img src="{{ asset('bundles/guestbook/images/reply.png') }}"/>
                <div class="reply">
                    <div class="title">
                        <span>Reply to: <span id="reply-name"></span></span>
                        <span><a href="#">×</a></span>
                        {{ form_row(form.parent) }}
                    </div>
                </div>
                {{ form_errors(form) }}
                    <div class="row collapse">
                        <div class="large-2 columns">
                            {{ form_label(form.name) }}
                        </div>
                        <div class="large-10 columns">
                            {{ form_row(form.name, { 'label': false }) }}
                        </div>
                    </div>
                    <div class="row collapse">
                        <div class="large-2 columns">
                            {{ form_label(form.email) }}
                        </div>
                        <div class="large-10 columns">
                            {{ form_row(form.email, { 'attr': {'placeholder': "test@test.com"}, 'label': false }) }}
                        </div>
                    </div>
                    {{ form_row(form.message, { 'attr': {'rows': "6"}}) }}
                {{ form_end(form) }}
            </div>
        </section>
    </div>
</div>

<footer class="row">
    <div class="large-12 columns">
        <hr/>
        <div class="row">
            <div class="large-5 columns">
                <p>© GNU General Public License</p>
            </div>
            <div class="large-7 columns">
                <ul class="inline-list right">
                    <li><a href="#">GitHub</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
</body>
</html>
